{
  "mcpServers": {
    "fetch": {
      "description": "MCP server for fetching web content",
      "enabled": true,
      "type": "stdio",
      "command": "uvx",
      "args": ["mcp-server-fetch"]
    },
    "idrinkcoffee": {
      "description": "iDrinkCoffee.com enhanced MCP server",
      "enabled": true,
      "type": "http",
      "url": "https://idrinkcoffee.com/api/mcp-enhanced",
      "headers": {
        "User-Agent": "EspressoBot/1.0"
      }
    },
    "google-workspace": {
      "description": "Google Workspace integration (Gmail, Calendar, Drive, Tasks)",
      "enabled": true,
      "type": "stdio",
      "command": "uvx",
      "args": ["workspace-mcp"],
      "env": {
        "GOOGLE_OAUTH_CLIENT_ID": "${GOOGLE_CLIENT_ID}",
        "GOOGLE_OAUTH_CLIENT_SECRET": "${GOOGLE_CLIENT_SECRET}"
      }
    }
  }
}