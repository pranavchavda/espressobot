# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o

# Anthropic Configuration (for future use)
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Shopify Configuration
SHOPIFY_SHOP_URL=https://your-shop.myshopify.com
SHOPIFY_ACCESS_TOKEN=your-shopify-access-token

# Database
DATABASE_URL=file:./prisma/dev.db

# Memory Server
MEMORY_FILE_PATH=./memories/agent-memories.json
SKIP_MEMORY_SERVER=false

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5173/api/auth/google/callback

# Session and JWT
SESSION_SECRET=your-session-secret-change-this
JWT_SECRET=your-jwt-secret-change-this

# Perplexity API (Optional)
PERPLEXITY_API_KEY=your-perplexity-api-key

# Development
NODE_ENV=development

# Access Control
# Comma-separated list of emails that have full access
ALLOWED_EMAILS=pranav@idrinkcoffee.com,sj@idrinkcoffee.com
# Restrict login to specific domain (leave empty to allow all domains)
RESTRICTED_DOMAIN=idrinkcoffee.com

# Memory System Configuration
# Use local embeddings instead of OpenAI (true/false)
USE_LOCAL_EMBEDDINGS=false
# Local embedding model to use (if USE_LOCAL_EMBEDDINGS=true)
LOCAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# Minimum relevance score for memory retrieval (0-1)
MEMORY_RELEVANCE_THRESHOLD=0.7
# Maximum memories per user
MAX_MEMORIES_PER_USER=1000

# Planning Agent Configuration
# Model to use for planning agent
PLANNING_MODEL=gpt-4o