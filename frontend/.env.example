# Backend API Configuration
VITE_API_URL=http://localhost:8000

# Google OAuth Configuration (for Workspace integration)
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Database Configuration (for local development)
DATABASE_URL=postgresql://username:password@localhost:5432/espressobot_dev

# Shopify Integration
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
SHOPIFY_ADMIN_ACCESS_TOKEN=your-admin-access-token

# AI Provider API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Optional: Multi-Agent Mode
USE_MULTI_AGENT=true

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production

# Memory File Path (if using local memory)
MEMORY_FILE_PATH=./memory/memories.json

# Development Options
SKIP_MEMORY_SERVER=false
NODE_ENV=development

# GA4 Analytics Integration
# GA4 is enabled by default with property ID: 325181275
# To use GA4 analytics:
# 1. GA4 is enabled by default (ga4_enabled=true)
# 2. Default property ID is set to 325181275 (update if needed)
# 3. Ensure Google Analytics readonly scope is authorized
# 4. Link Google Ads account to GA4 for advertising metrics
# 
# To disable GA4 or change property ID, update user record in database