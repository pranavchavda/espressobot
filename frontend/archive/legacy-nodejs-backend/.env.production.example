# Production Environment Variables
NODE_ENV=production
PORT=3000

# Database (use PostgreSQL in production)
DATABASE_URL=postgresql://username:password@localhost:5432/espressobot

# API Keys
OPENAI_API_KEY=your_openai_api_key
PERPLEXITY_API_KEY=your_perplexity_api_key

# Shopify
SHOPIFY_SHOP_URL=your-shop.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_admin_api_token

# Google OAuth (for authentication)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://your-domain.com/auth/google/callback

# Google Workspace uses direct API integration (no additional config needed)

# Session Configuration
SESSION_SECRET=your_very_long_random_session_secret
COOKIE_DOMAIN=your-domain.com

# Optional: Tracing and Monitoring
OPENAI_TRACING_ENABLED=false
OPENAI_TRACING_AGENTS=

# Optional: Guardrails
GUARDRAILS_ENABLED=true
GUARDRAILS_BULK_MAX_RETRIES=3