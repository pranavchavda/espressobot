# Optimized Orchestrator Configuration
# Copy to .env or source this file

# Context Management
ORCHESTRATOR_MAX_CONTEXT_TOKENS=10000
ORCHESTRATOR_COMPRESSION_THRESHOLD=60000
ORCHESTRATOR_RECENT_MESSAGES_LIMIT=15

# Agent Execution
ORCHESTRATOR_MAX_AGENT_CALLS=7
ORCHESTRATOR_AGENT_TIMEOUT=90
ORCHESTRATOR_PARALLEL_THRESHOLD=2

# Error Handling and Retries
ORCHESTRATOR_MAX_RETRIES=3
ORCHESTRATOR_BASE_RETRY_DELAY=1.5
ORCHESTRATOR_MAX_RETRY_DELAY=45.0
ORCHESTRATOR_RETRY_BASE=2.0

# Persistence
ORCHESTRATOR_PERSIST_CONVERSATIONS=true
ORCHESTRATOR_PERSIST_AGENT_STATE=true
ORCHESTRATOR_STATE_STORAGE=postgres

# Observability
ORCHESTRATOR_STRUCTURED_LOGGING=true
ORCHESTRATOR_LOG_LEVEL=INFO
ORCHESTRATOR_TRACE_ALL=true