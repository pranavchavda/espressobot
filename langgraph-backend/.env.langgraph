# LangGraph Backend Configuration
# Database Configuration for Separate Instance

# API Keys
ANTHROPIC_API_KEY=your_api_key_here
OPENAI_API_KEY=your_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Database - NEW SEPARATE DATABASE
DATABASE_URL=postgresql://espressobot:localdev123@localhost:5432/espressobot_langgraph
REDIS_URL=redis://localhost:6379

# Server Config
HOST=0.0.0.0
PORT=8001
ENVIRONMENT=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# MCP Tools Path
MCP_TOOLS_PATH=/home/pranav/espressobot/frontend/python-tools

# Logging
LOG_LEVEL=INFO

# Model Configuration (using GPT-5 models)
MODEL_ORCHESTRATOR=openai/gpt-5
MODEL_PRIMARY=openai/gpt-5-mini
MODEL_AUXILIARY=openai/gpt-5-nano
MODEL_SPECIALIZED=deepseek/deepseek-chat

# Context Management
ORCHESTRATOR_MAX_CONTEXT_TOKENS=10000
ORCHESTRATOR_COMPRESSION_THRESHOLD=60000
ORCHESTRATOR_RECENT_MESSAGES_LIMIT=15

# Agent Execution
ORCHESTRATOR_MAX_AGENT_CALLS=7
ORCHESTRATOR_AGENT_TIMEOUT=90
ORCHESTRATOR_PARALLEL_THRESHOLD=2

# Error Handling and Retries
ORCHESTRATOR_MAX_RETRIES=3
ORCHESTRATOR_BASE_RETRY_DELAY=1.5
ORCHESTRATOR_MAX_RETRY_DELAY=45.0
ORCHESTRATOR_RETRY_BASE=2.0

# Persistence
ORCHESTRATOR_PERSIST_CONVERSATIONS=true
ORCHESTRATOR_PERSIST_AGENT_STATE=true
ORCHESTRATOR_STATE_STORAGE=postgres

# Observability
ORCHESTRATOR_STRUCTURED_LOGGING=true
ORCHESTRATOR_LOG_LEVEL=INFO
ORCHESTRATOR_TRACE_ALL=true